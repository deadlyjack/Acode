<?xml version='1.0' encoding='utf-8'?>
<widget id="com.napolitano.cordova.example.intent" version="0.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="IntentPlugin">
        <param name="android-package" value="com.napolitano.cordova.plugin.intent.IntentPlugin" />
    </feature>
    <allow-intent href="market:*" />
    <name>Intent Example</name>
    <description>
        A sample Apache Cordova application for demonstration of the intent plugin.
    </description>
    <author email="intent.plugin.2015@skjt.de" href="https://github.com/napolitano/cordova-plugin-intent">
        Axel Napolitano
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
